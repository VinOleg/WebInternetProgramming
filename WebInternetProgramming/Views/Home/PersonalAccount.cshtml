@model WebInternetProgramming.Models.ViewModel.PersonalAccountViewModel
@if (User.Identity.IsAuthenticated)
{
    <form method="post" asp-action="Logout">
        <input class="btn btn-outline-primary" type="submit" value="Выход" />
    </form>
}
else
{
    <h2>Вход</h2>
    <form method="post" asp-action="Login">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="LoginModel.Email"></label><br/>
            <input asp-for="LoginModel.Email"/>
            <span asp-validation-for="LoginModel.Email"></span>
        </div>
        <div>
            <label asp-for="LoginModel.Password"></label><br/>
            <input asp-for="LoginModel.Password"/>
            <span asp-validation-for="LoginModel.Password"></span>
        </div>
        <div>
            <label asp-for="LoginModel.RememberMe"></label><br/>
            <input asp-for="LoginModel.RememberMe"/>
        </div>
        <div>
            <input type="submit" value="Войти"/>
        </div>
    </form>
    <a asp-action="Register">Регистрация</a>
}