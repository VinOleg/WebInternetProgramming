@model WebInternetProgramming.Models.Shop.ViewModel.ShopIndexViewModel

<div class="row">
    @foreach (var item in Model.Goods)
    {
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <img class="card-img-top" src=@item.Src alt="test" height="350">
                    <p class="card-text">@item.Desc</p>
                    <a asp-action="buy" asp-route-id=@item.Id class="btn btn-primary">Купить</a>
                </div>
            </div>
        </div>
        
}
</div>


